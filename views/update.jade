extends layout

block head
  title Update
  
block content
  div(class="container")
    h1 Update
    form(action="update", method="post")
      div(class="form-group row")
        label(class="col-sm-2 col-form-label") Name
        div(class="col-sm-4")
          input(value=exercise.name, name="name", class="form-control", type="text")
      div(class="form-group row")
        label(class="col-sm-2 col-form-label") reps
        div(class="col-sm-4")
          input(value=exercise.reps, name="reps", class="form-control", type="text")
      div(class="form-group row")
        label(class="col-sm-2 col-form-label") weight
        div(class="col-sm-4")
          input(value=exercise.weight, name="weight", class="form-control", type="text")
      div(class="form-group row")
        label(class="col-sm-2 col-form-label") date
        div(class="col-sm-4")
          input(value=exercise.date, name="date", class="form-control", type="text")
      div(class="form-group row")
        label(class="col-sm-2 col-form-label") unit
        div(class="col-sm-4")
          input(value=exercise.unit, name="unit", class="form-control", type="text")
      div(class="form-group row")
        div(class="col-sm-4")
          input(value=exercise.id, name="id", class="form-control", type="hidden")
          button(type="submit", class="btn btn-primary") Save Changes
